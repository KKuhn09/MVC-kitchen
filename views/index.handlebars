<div class="row container-fluid">
	<h1 class="text-center" style="font-size:400%"><span class="glyphicon glyphicon-ice-lolly-tasted"></span>In the kitchen</h1><hr>
</div>

<div class="row container-fluid text-center">
	<h2>Add an item to eat!</h2>

	<form action="/insert" method="POST">
    	<input type="text" name="item_name" id="user_input" onkeyup="verify()" style="background-color:#f5f5f5">
  		<button type="submit" class="btn btn-primary" id="start_button" disabled="true">Submit</button>
	</form>
</div>

<div class="container-fluid">
	<div class="row">

		<!--Column where food not devoured(0) is displayed-->
		<div class="well col-md-offset-2 col-md-4" id="wells">
			<h2 class="text-center" style="background-color:#f5f5f5">Food to be eaten</h2><hr>

			<ul style="background-color:#f5f5f5">
			  {{#each items}}
			    {{#unless this.devoured}}
				    <li class="foods" style="background-color:#f5f5f5">
				      	{{this.item_name}}
	
				    	<form action="/update" method="POST" style="background-color:#f5f5f5">
				      		<input type="hidden" name="item_id" value="{{this.id}}">
			          		<button type="submit" class="btn btn-danger">DEVOUR IT!</button>
			        	</form>

			      	</li>
			    {{/unless}}
			  {{/each}}
			</ul>

		</div>
		<!--Column where food devoured(1) is displayed-->
		<div class=" well col-md-4" id="wells" style="margin-left:20px">
			<h2 class="text-center" style="background-color:#f5f5f5">Food Eaten</h2><hr>

			<ul style="background-color:#f5f5f5">
			  {{#each items}}
			    {{#if this.devoured}}
				    <li class="foods" style="background-color:#f5f5f5">
				        {{this.item_name}}
			      	</li>
			    {{/if}}
			  {{/each}}
			</ul>
		</div>

	</div>
</div>

<script type="text/javascript">
	function verify(){
		var userInput=document.getElementById("user_input");
		if(userInput.value == ""){
			document.getElementById("start_button").disabled=true;
		}else{
			document.getElementById("start_button").disabled=false;
		}
	}
</script>